<div class="form-row">
    <!-- Title field -->
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= book.title %>">
    </div>
    <!-- Author field (select) -->
    <div class="form-item">
        <label for="author">Author</label>
        <select name="author" id="author">
            <% authors.forEach(author => { %>
            <% // console.log(`Book :${typeof book.author} ${book.author}`) %>
            <% // console.log(`Author :${typeof author.id} ${author.id}`) %>

            <% if (author.id === String(book.author)) { %>
            <option value="<%= author.id %>" label="<%= author.name %>" selected></option>
            <% } else { %>
            <option value="<%= author.id %>" label="<%= author.name %>"></option>
            <% } %>
            <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <!-- Publish date -->
    <div class="form-item">
        <label for="publishDate">Publish Date</label>
        <input type="date" name="publishDate" id="publishDate"
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <!-- Page Count -->
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount %>">
    </div>
</div>

<div class="form-row">
    <!-- Cover -->
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <input type="file" name="cover" id="cover" class="book-cover filepond">
    </div>
    <!-- Description -->
    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
</div>